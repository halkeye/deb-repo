{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>halkeye/halkeye//.github/renovate/base.json5"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "apps.yaml$",
        "packages.yaml$"
      ],
      "matchStrings": [
        "version: \"(?<currentValue>.+?)\" # repo: (?<depName>.*)",
        "version: (?<currentValue>.+?) # repo: (?<depName>.*)"
      ],
      "datasourceTemplate": "github-releases"
    }
  ]
}
